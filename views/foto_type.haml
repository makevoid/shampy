- @photos.shuffle!
- size = @photos.size
- size = 15
- photos = @photos[0..size]

%h1
  = photos.first.author


.photo_gallery
  %a.close{ href: "/foto_tagli" } x
  %a.prev <
  %a.next >
  - photos.each_with_index do |photo, idx|
    - val = size - idx - 1
    %div{ "data-author" => photo.author, class: "pos#{val}" }
      %img{ src: photo.path }