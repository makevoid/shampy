%html
  %head
    %title Shampy
    %link{ rel: "stylesheet", href: "/css/main.css" }
  %body{  }
    #container
      %nav.right
        - if logged_in?
          %form{ action: "/logout", method: "post" }
            %input{ type: "submit", value: "Logout" }
          .user_name
            %a.btn{ href: "/users/#{current_user.id}" }= current_user.username
        - else
          %a.btn{ href: "/login" } Login
          o
          %a.btn{ href: "/register" } Registrati
      %header
        %h1
          - link_to "Shampy", "/"
      %nav.main
        - if admin? || !member?
          - link_to "Chi Siamo",  "/chi_siamo"
          - link_to "Offerta",    "/offerta"
          - link_to "Mission",    "/mission"
          - link_to "Preview",    "/preview"
        -# member
        -# categorie: uomo, donna, bambino, sposa
        - if member?
          - link_to "Foto",       "/foto"
          - link_to "Tagli",      "/tagli"
          -# sottocategorie: stilisti (Sesler, Anthony Jhon)
          - link_to "Norme",      "/norme"
          - link_to "Modelli",    "/modelli"
          - link_to "Prodotti",   "/prodotti"
        - if admin?
          - link_to "Utenti",     "/users"

      .gallery
        %img.pos0{ src: "/img/gallery/1.png" }
        %img.pos1{ src: "/img/gallery/2.png" }
        %img.pos2{ src: "/img/gallery/3.png" }
        %img.pos3{ src: "/img/gallery/4.png" }
        %img.pos4{ src: "/img/gallery/5.png" }
        %img.pos5{ src: "/img/gallery/6.png" }

      %section.content= yield
      %script{ type: "text/javascript", src: "/js/vendor/jquery.js" }
      %script{ type: "text/javascript", src: "/js/app.js" }